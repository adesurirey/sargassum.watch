const CACHE_VERSION = 'v1';
const CACHE_NAME = CACHE_VERSION + ':sw-cache-';

function onInstall(event) {
  console.log('[Serviceworker]', "Installing");

  event.waitUntil(
    caches.open(CACHE_NAME).then(function prefill(cache) {
      return cache.addAll([
        '<%= stylesheet_path "application.css" %>',
        '<%= asset_pack_path "map.css" %>',
        '<%= asset_pack_path "map.js" %>',
        '<%= image_path "favicon-16x16.png" %>',
        '<%= image_path "favicon-32x32.png" %>',
        '<%= image_path "minus-dark.svg" %>',
        '<%= image_path "plus-dark.svg" %>',
        '<%= image_path "minus-light.svg" %>',
        '<%= image_path "plus-light.svg" %>',
        '<%= asset_pack_path "media/images/beach-covered-by-sargassum.jpg" %>',
        '<%= asset_pack_path "media/images/sargassum.watch-logo.png" %>',
        '<%= asset_pack_path "media/images/sargassum.watch-logo@2x.png" %>',
        '<%= asset_pack_path "media/images/sargassum.watch-logo@3x.png" %>',
        '<%= asset_pack_path "media/images/sargassum.watch-map.png" %>',
        '<%= asset_pack_path "media/files/open-sans-latin-400.woff" %>',
        '<%= asset_pack_path "media/files/open-sans-latin-400.woff2" %>',
        '<%= asset_pack_path "media/files/open-sans-latin-600.woff" %>',
        '<%= asset_pack_path "media/files/open-sans-latin-600.woff2" %>',
        '<%= asset_pack_path "media/files/open-sans-latin-700.woff" %>',
        '<%= asset_pack_path "media/files/open-sans-latin-700.woff2" %>',
        '/manifest.json',
        '/offline.html',
      ]);
    })
  );
}

function onActivate(event) {
  console.log('[Serviceworker]', "Activating");

  event.waitUntil(
    caches.keys().then(function(cacheNames) {
      return Promise.all(
        cacheNames.filter(function(cacheName) {
          // Return true if you want to remove this cache,
          // but remember that caches are shared across
          // the whole origin
          return cacheName.indexOf(CACHE_VERSION) !== 0;
        }).map(function(cacheName) {
          return caches.delete(cacheName);
        })
      );
    })
  );
}

// Borrowed from https://github.com/TalAter/UpUp
function onFetch(event) {
  event.respondWith(
    // try to return untouched request from network first
    fetch(event.request).catch(function() {
      // if it fails, try to return request from the cache
      return caches.match(event.request).then(function(response) {
        if (response) {
          return response;
        }
        // if not found in cache, return default offline content for navigate requests
        if (event.request.mode === 'navigate' ||
          (event.request.method === 'GET' && event.request.headers.get('accept').includes('text/html'))) {
          console.log('[Serviceworker]', "Fetching offline content");
          return caches.match('/offline.html');
        }
      })
    })
  );
}

self.addEventListener('install', onInstall);
self.addEventListener('activate', onActivate);
self.addEventListener('fetch', onFetch);
