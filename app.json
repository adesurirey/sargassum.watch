{
  "name": "sargassum.watch",
  "scripts": {
    "postdeploy": "scripts/heroku_postdeploy.sh"
  },
  "env": {
    "APP_ENV": "review",
    "ADMIN_PASSWORD": {
      "required": true
    },
    "ADMIN_USERNAME": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_BUCKET": {
      "required": true
    },
    "AWS_REGION": {
      "required": true
    },
    "HEROKU_API_KEY": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HOST": "http://i-will-be-replaced-by-postdeploy-script.com",
    "MAPBOX_API_ACCESS_TOKEN": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "REPORT_SCRAPPER_URL_2018_WITH": {
      "required": true
    },
    "REPORT_SCRAPPER_URL_2018_WITHOUT": {
      "required": true
    },
    "REPORT_SCRAPPER_URL_2019_WITH": {
      "required": true
    },
    "REPORT_SCRAPPER_URL_2019_WITHOUT": {
      "required": true
    },
    "REPORT_SCRAPPER_URL_2020_WITH": {
      "required": true
    },
    "REPORT_SCRAPPER_URL_2020_WITHOUT": {
      "required": true
    },
    "SENTRY_PRIVATE_DSN": {
      "required": true
    },
    "SENTRY_PUBLIC_DSN": {
      "required": true
    },
    "YOUTUBE_API_KEY": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": ["rediscloud", "heroku-postgresql", "memcachedcloud"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-cli"
    }
  ]
}
